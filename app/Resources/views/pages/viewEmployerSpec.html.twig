{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="row bg-dark" style="padding-bottom: 20px;">
            <div class="col-lg-12">
                <h3 class="text-warning text-center">{{ employer[0].name }}</h3>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row employer-description">
            <div class="col-sm-4">
                <div class="card" style="width: 10rem;">
                    <img class="card-img-top" style="size: 640px 320px;" src="{{ asset('employers/'~employer[0].logo) }}" alt="Card image cap">
                </div>
            </div>
            <div class="col-sm-8">
                <p>About : <br> {{ employer[0].description }}</p>
                <br>
                <p>Website : <a href="{{ employer[0].website }}" target="_blank">{{ employer[0].website }}</a> </p>
            </div>
        </div>

        <hr>
        <h5 class="text-center">Vacancies at {{ employer[0].name }}</h5>
        <div class="row vacancy-list">
            <table id="vacancy-table" class="table table-condensed table-hover" cellspacing="0" width="100%">
                <thead>
                <tr>
                    {#<th>ID</th>#}
                    <th>Position</th>
                    <th>Description</th>
                    <th>Apply</th>
                </tr>
                </thead>
                <tbody>
                {% for vacancy in vacancy_list%}
                    <tr class='vacancy-row' data-href="{{ path('jobSpecPage',{'vacancy':'va.pdf'}) }}" >
                        {#<td>{{ vacancy.id }}</td>#}
                        <td>{{ vacancy.name }}</td>
                        <td>{{ vacancy.description }}</td>
                        <td><a href="{{ path('jobSpecPage',{'vacancy':'va.pdf'}) }}" target="_blank">More</a> </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}



